<Window
    x:Class="WindowsActivator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:local="clr-namespace:WindowsActivator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="Windows Activator"
    Width="600"
    Height="450"
    MinWidth="500"
    MinHeight="400"
    ui:TitleBar.Height="0"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    Background="{DynamicResource ApplicationPageBackgroundThemeBrush}"
    FontFamily="Segoe UI"
    MouseDown="SimpleStackPanel_MouseDown"
    mc:Ignorable="d">

    <Grid Margin="15">
        <!--  Top Right Window Buttons  -->
        <DockPanel
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            LastChildFill="False">


            <Button
                Name="minButton"
                Margin="0,0,5,0"
                ui:ElevationBorder.IsElevationEnabled="False"
                BorderThickness="0"
                Click="minButton_Click"
                Style="{DynamicResource AccentButtonStyle}"
                ToolTip="Minimize">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Text="−" />
            </Button>

            <Button
                Name="MaxButton"
                Margin="0,0,4,0"
                ui:ElevationBorder.IsElevationEnabled="False"
                BorderThickness="0"
                Click="MaxButton_Click"
                Style="{DynamicResource AccentButtonStyle}"
                ToolTip="Maximize">
                <TextBlock
                    Name="MaxBtnText"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Text="⬜" />
            </Button>

            <Button
                Name="CloseButton"
                Margin="0,0,0,0"
                ui:ElevationBorder.IsElevationEnabled="False"
                BorderThickness="0"
                Click="CloseButton_Click"
                Style="{DynamicResource AccentButtonStyle}"
                ToolTip="Close">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Text="×" />
            </Button>
        </DockPanel>

        <!--  Center Content  -->
        <Grid Margin="0,10,0,0" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>


            <!--  Title Section  -->
            <StackPanel
                Grid.Row="0"
                Margin="0,0,0,20"
                HorizontalAlignment="Center">
                <TextBlock
                    Margin="0,0,0,6"
                    FontSize="28"
                    FontWeight="Bold"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="Windows Activator"
                    TextAlignment="Center" />

                <TextBlock
                    FontSize="14"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="Activate your Windows and MS Office"
                    TextAlignment="Center" />
                <TextBlock
                    FontSize="14"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="for Free, for Lifetime"
                    TextAlignment="Center" />


            </StackPanel>


            <!--  Main Section  -->
            <StackPanel
                Grid.Row="1"
                Margin="0,20,0,15"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center">

                <!--  Instruction Text  -->
                <TextBlock
                    Margin="0,0,0,3"
                    FontSize="14"
                    FontWeight="Regular"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="Choose an activation method:"
                    TextAlignment="Center" />



                <!--  Radio Button Group  -->
                <Grid
                    Grid.Row="1"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <RadioButton
                            Name="hwidRB"
                            Content="HWID"
                            GroupName="ActivationMethods"
                            ToolTip="Requires Internet - Activation Permanent" />

                        <RadioButton
                            Name="ohookRB"
                            Content="OHOOK"
                            GroupName="ActivationMethods"
                            ToolTip="Offline - Activate office and windows" />
                    </StackPanel>

                    <StackPanel
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <RadioButton
                            Name="kms38RB"
                            Content="KMS38"
                            GroupName="ActivationMethods"
                            ToolTip="Offline - Activation till 2038" />

                        <RadioButton
                            Name="tsforgeRB"
                            Content="TSFORGE"
                            GroupName="ActivationMethods"
                            ToolTip="Windows / ESU / Office -  Permanent" />

                    </StackPanel>
                </Grid>

                <Border
                    Padding="25,10"
                    HorizontalAlignment="Center"
                    Background="{DynamicResource LayerFillColorDefaultBrush}"
                    CornerRadius="10">

                    <StackPanel Margin="5,5" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Name="OSKey"
                                Margin="0,0,0,5"
                                FontSize="13"
                                FontWeight="Bold"
                                Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                Text="OS: "
                                TextAlignment="Left" />

                            <TextBlock
                                Name="OSValue"
                                Margin="0,0,0,5"
                                FontSize="13"
                                FontWeight="Bold"
                                Foreground="{DynamicResource BlueColor}"
                                Text="Unknown"
                                TextAlignment="Left" />

                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Name="actKey"
                                FontSize="13"
                                FontWeight="Bold"
                                Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                Text="Activation: "
                                TextAlignment="Left" />

                            <TextBlock
                                Name="actValue"
                                FontSize="13"
                                FontWeight="Bold"
                                Foreground="{DynamicResource GreenColor}"
                                Text="Unknown"
                                TextAlignment="Left" />
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>

            <!--  Action Area  -->
            <StackPanel
                Grid.Row="2"
                Margin="0,10,0,0"
                HorizontalAlignment="Center">
                <!--  Text above the button  -->
                <TextBlock
                    Margin="0,0,0,8"
                    FontSize="12"
                    FontWeight="SemiBold"
                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                    Text="Made with ❤ by Zubair Khan"
                    TextAlignment="Center" />

                <!--  Activate button  -->
                <Button
                    Name="ActivateBtn"
                    Width="350"
                    Height="40"
                    ui:ElevationBorder.IsElevationEnabled="True"
                    Click="ActivateBtn_Click"
                    Content="Activate Now"
                    FontSize="15"
                    Style="{DynamicResource AccentButtonStyle}" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
